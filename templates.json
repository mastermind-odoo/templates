{
  "version": "2",
  "templates": [
    {
      "type": "stack",
      "title": "Nginx Hello",
      "description": "Ejemplo mínimo para probar catálogos en Portainer",
      "note": "Este stack levanta un contenedor Nginx accesible en el puerto 8085",
      "categories": ["test", "nginx"],
      "platform": "linux",
      "logo": "https://www.nginx.com/wp-content/uploads/2018/08/NGINX-logo-rgb-large.png",
      "stack": {
        "version": "3.8",
        "services": {
          "hello-nginx": {
            "image": "nginx:alpine",
            "container_name": "hello-nginx",
            "ports": ["8085:80"],
            "restart": "always"
          }
        }
      }
    }
  ]
}
